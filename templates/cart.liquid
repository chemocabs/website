<h1>Your Cart</h1>
<div class="container">
  {% if cart.item_count > 0 %}
    <form action="/cart" method="post" novalidate>
      {% for item in cart.items %}
        <div>{{ item.product.title }} - {{ item.quantity }}</div>
      {% endfor %}
      <button type="submit" name="checkout">Checkout</button>
    </form>
  {% else %}
    <p>Your cart is empty</p>
  {% endif %}
</div>
