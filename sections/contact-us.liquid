<section id="contact" class="contact-us section-{{ section.id }}" aria-labelledby="contact-heading">
  <div class="container">
    <div class="contact-us__grid">
      <div class="contact-us__info fade-up">
        <h2 id="contact-heading" class="contact-us__title section-heading">
          {{ section.settings.heading }}
        </h2>
        <div class="contact-us__subheading">
          {{ section.settings.subheading }}
        </div>

        <div class="contact-us__details">
          {%- if section.settings.email != blank -%}
            <div class="contact-item">
              <span class="contact-item__icon">‚úâÔ∏è</span>
              <div class="contact-item__content">
                <strong>Email</strong>
                <a href="mailto:{{ section.settings.email }}">{{ section.settings.email }}</a>
              </div>
            </div>
          {%- endif -%}

          {%- if section.settings.phone != blank -%}
            <div class="contact-item">
              <span class="contact-item__icon">üìû</span>
              <div class="contact-item__content">
                <strong>Phone</strong>
                <a href="tel:{{ section.settings.phone | replace: '-', '' }}">{{ section.settings.phone }}</a>
              </div>
            </div>
          {%- endif -%}
        </div>

        {%- if section.settings.show_socials -%}
          <div class="contact-us__socials">
            <h4 class="contact-us__socials-title">Follow Our Journey</h4>
            <div class="social-links">
              <a href="#" class="social-link" aria-label="Facebook">FB</a>
              <a href="#" class="social-link" aria-label="Instagram">IG</a>
              <a href="#" class="social-link" aria-label="LinkedIn">LN</a>
            </div>
          </div>
        {%- endif -%}
      </div>

      <div class="contact-us__form-area fade-up">
        <div class="contact-form-card card glass">
          <h3 class="contact-form-card__title">{{ section.settings.form_heading }}</h3>
          <div class="contact-form-card__content">
            {%- if section.settings.form_id != blank -%}
              {% render 'form', form: section.settings.form_id %}
            {%- else -%}
              <div class="placeholder-msg">
                <p>Please select a form in section settings.</p>
              </div>
            {%- endif -%}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .section-{{ section.id }} {
    background: linear-gradient(135deg, #fdf2f8 0%, #ffffff 100%);
    padding: 100px 0;
  }

  .contact-us__grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 80px;
    align-items: flex-start;
  }

  .contact-us__title {
    text-align: left;
    margin-bottom: 24px;
  }

  .contact-us__subheading {
    font-size: 1.1rem;
    color: #4B5563;
    margin-bottom: 40px;
    line-height: 1.6;
  }

  .contact-us__details {
    display: flex;
    flex-direction: column;
    gap: 24px;
    margin-bottom: 48px;
  }

  .contact-item {
    display: flex;
    gap: 16px;
    align-items: center;
  }

  .contact-item__icon {
    font-size: 1.5rem;
    width: 48px;
    height: 48px;
    background: white;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 12px;
    box-shadow: 0 4px 6px -1px rgba(0,0,0,0.05);
  }

  .contact-item__content strong {
    display: block;
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: #9CA3AF;
  }

  .contact-item__content a {
    color: var(--color-pink);
    font-weight: 600;
    text-decoration: none;
    transition: color 0.2s;
  }

  .contact-item__content a:hover {
    color: var(--color-pink-dark);
  }

  .contact-form-card {
    padding: 40px;
    background: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.4);
    box-shadow: var(--shadow-xl);
  }

  .contact-form-card__title {
    margin-bottom: 24px;
    font-size: 1.5rem;
    font-weight: 700;
  }

  @media (max-width: 991px) {
    .contact-us__grid {
      grid-template-columns: 1fr;
      gap: 60px;
    }
  }

  @media (max-width: 768px) {
    .section-{{ section.id }} {
      padding: 60px 0;
    }
    .contact-form-card {
      padding: 24px;
    }
  }
</style>

{% schema %}
{
  "name": "Contact Us (Premium)",
  "settings": [
    {
      "type": "header",
      "content": "Description"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Get in Touch"
    },
    {
      "type": "richtext",
      "id": "subheading",
      "label": "Subheading",
      "default": "<p>Have questions about ridding, volunteering, or donating? Our team is here to help.</p>"
    },
    {
      "type": "header",
      "content": "Contact Details"
    },
    {
      "type": "text",
      "id": "email",
      "label": "Email Address",
      "default": "chemocabs@gmail.com"
    },
    {
      "type": "text",
      "id": "phone",
      "label": "Phone Number",
      "default": "416-930-9424"
    },
    {
      "type": "checkbox",
      "id": "show_socials",
      "label": "Show Social Links",
      "default": true
    },
    {
      "type": "header",
      "content": "Form Integration"
    },
    {
      "type": "text",
      "id": "form_heading",
      "label": "Form Heading",
      "default": "Send us a Message"
    },
    {
      "type": "text",
      "id": "form_id",
      "label": "Shopify Form ID",
      "default": "874037"
    }
  ],
  "presets": [
    {
      "name": "Contact Us (Premium)"
    }
  ]
}
{% endschema %}
