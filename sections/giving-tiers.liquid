<section class="giving-tiers" aria-labelledby="tiers-heading">
  <div class="container">
    <div class="text-center fade-up">
      <h2 class="section-heading" id="tiers-heading">{{ section.settings.heading }}</h2>
      <p class="section-subheading">
        {{ section.settings.subheading }}
      </p>
    </div>
    <div class="giving-tiers__grid stagger-children">
      {%- for block in section.blocks -%}
        <div class="giving-tiers__card card fade-up giving-tiers__card--{{ block.settings.style }}" {{ block.shopify_attributes }}>
          {% if block.settings.badge != blank %}
            <span class="giving-tiers__badge badge badge-pink">{{ block.settings.badge }}</span>
          {% endif %}
          <span class="giving-tiers__emoji">{{ block.settings.emoji }}</span>
          <h3 class="giving-tiers__name">{{ block.settings.name }}</h3>
          <p class="giving-tiers__range">{{ block.settings.range }}</p>
          <p class="giving-tiers__desc">{{ block.settings.description }}</p>
          <ul class="giving-tiers__perks">
            {% assign perks = block.settings.perks | split: ';' %}
            {% for perk in perks %}
              <li><span class="giving-tiers__check">âœ“</span> {{ perk | strip }}</li>
            {% endfor %}
          </ul>
          <a href="#donate" class="btn {% if block.settings.style == 'featured' %}btn-pink{% else %}btn-outline-pink{% endif %} btn-full">
            {{ block.settings.cta }}
          </a>
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

