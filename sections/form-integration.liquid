<section id="shopify-form-{{ section.id }}" class="shopify-form-integration section-{{ section.id }}" aria-labelledby="form-heading-{{ section.id }}">
  <div class="container">
    {%- if section.settings.heading != blank or section.settings.subheading != blank -%}
      <div class="shopify-form-integration__header fade-up">
        {%- if section.settings.heading != blank -%}
          <h2 class="section-heading" id="form-heading-{{ section.id }}">{{ section.settings.heading }}</h2>
        {%- endif -%}
        {%- if section.settings.subheading != blank -%}
          <div class="section-subheading">
            {{ section.settings.subheading }}
          </div>
        {%- endif -%}
      </div>
    {%- endif -%}

    <div class="shopify-form-integration__content fade-up">
      {%- if section.settings.form != blank -%}
        {%- comment -%} 
          Rendering the official Shopify Form. 
          The 'form' setting type provides the form object/handle.
        {%- endcomment -%}
        {% render 'form', form: section.settings.form %}
      {%- else -%}
        <div class="shopify-form-integration__placeholder card">
          <p>Please select a Shopify Form in the section settings to display it here.</p>
        </div>
      {%- endif -%}

      {%- comment -%} Support for app blocks if added later {%- endcomment -%}
      {%- for block in section.blocks -%}
        {%- if block.type == '@app' -%}
          <div class="shopify-form-integration__app-block" {{ block.shopify_attributes }}>
            {% render block %}
          </div>
        {%- endif -%}
      {%- endfor -%}
    </div>
  </div>
</section>

<style>
  .section-{{ section.id }} {
    background-color: {{ section.settings.bg_color }};
    color: {{ section.settings.text_color }};
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
  
  .section-{{ section.id }} .section-heading,
  .section-{{ section.id }} .section-subheading {
    color: {{ section.settings.text_color }};
  }

  .shopify-form-integration__header {
    text-align: center;
    margin-bottom: 48px;
  }

  .shopify-form-integration__content {
    max-width: 800px;
    margin: 0 auto;
  }

  .shopify-form-integration__placeholder {
    text-align: center;
    padding: 60px;
    border: 2px dashed #e5e7eb;
    background: rgba(0,0,0,0.02);
  }

  /* Ensure Shopify Form matches theme aesthetics */
  .section-{{ section.id }} .shopify-form {
    background: transparent !important;
  }

  @media (max-width: 768px) {
    .section-{{ section.id }} {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round }}px;
    }
  }
</style>

{% schema %}
{
  "name": "Shopify Form Integration",
  "settings": [
    {
      "type": "header",
      "content": "Form Selection"
    },
    {
      "type": "form",
      "id": "form",
      "label": "Select Shopify Form",
      "info": "Requires the Shopify Forms app to be installed and an active form created."
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Get in Touch"
    },
    {
      "type": "richtext",
      "id": "subheading",
      "label": "Subheading",
      "default": "<p>Fill out the form below and we'll get back to you shortly.</p>"
    },
    {
      "type": "header",
      "content": "Styling"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#0A0A0A"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 160,
      "step": 8,
      "unit": "px",
      "label": "Top Padding",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 160,
      "step": 8,
      "unit": "px",
      "label": "Bottom Padding",
      "default": 80
    }
  ],
  "blocks": [
    {
      "type": "@app"
    }
  ],
  "presets": [
    {
      "name": "Shopify Form Integration"
    }
  ]
}
{% endschema %}
