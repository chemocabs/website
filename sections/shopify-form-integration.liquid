<section id="shopify-form-{{ section.id }}" class="shopify-form-integration section-{{ section.id }}" aria-labelledby="form-heading-{{ section.id }}">
  <div class="container">
    {%- if section.settings.heading != blank or section.settings.subheading != blank -%}
      <div class="shopify-form-integration__header fade-up">
        {%- if section.settings.heading != blank -%}
          <h2 class="section-heading" id="form-heading-{{ section.id }}">{{ section.settings.heading }}</h2>
        {%- endif -%}
        {%- if section.settings.subheading != blank -%}
          <div class="section-subheading">
            {{ section.settings.subheading }}
          </div>
        {%- endif -%}
      </div>
    {%- endif -%}

    <div class="shopify-form-integration__content fade-up">
      {%- if section.settings.form_id != blank -%}
        <div class="shopify-form-wrapper">
          {% render 'form', form: section.settings.form_id %}
        </div>
      {%- endif -%}

      {%- comment -%} App blocks are the preferred way for Shopify Forms OS 2.0 {%- endcomment -%}
      {%- for block in section.blocks -%}
        {%- if block.type == '@app' -%}
          <div class="shopify-form-integration__app-block" {{ block.shopify_attributes }}>
            {% render block %}
          </div>
        {%- endif -%}
      {%- endfor -%}

      {%- if section.settings.form_id == blank and section.blocks.size == 0 -%}
        <div class="shopify-form-integration__placeholder card">
          <p>Please enter a Shopify Form ID or add an App Block in the section settings.</p>
        </div>
      {%- endif -%}
    </div>
  </div>
</section>

<style>
  .section-{{ section.id }} {
    background-color: {{ section.settings.bg_color | default: '#ffffff' }};
    color: {{ section.settings.text_color | default: '#0a0a0a' }};
    padding-top: {{ section.settings.padding_top | default: 80 }}px;
    padding-bottom: {{ section.settings.padding_bottom | default: 80 }}px;
  }
  
  .section-{{ section.id }} .section-heading,
  .section-{{ section.id }} .section-subheading {
    color: {{ section.settings.text_color | default: '#0a0a0a' }};
  }

  .shopify-form-integration__header {
    text-align: center;
    margin-bottom: 48px;
  }

  .shopify-form-integration__content {
    max-width: 800px;
    margin: 0 auto;
  }

  .shopify-form-integration__placeholder {
    text-align: center;
    padding: 60px;
    border: 2px dashed #e5e7eb;
    background: rgba(0,0,0,0.02);
    border-radius: var(--radius-lg);
  }

  @media (max-width: 768px) {
    .section-{{ section.id }} {
      padding-top: {{ section.settings.padding_top | times: 0.75 | default: 60 | round }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | default: 60 | round }}px;
    }
  }
</style>

{% schema %}
{
  "name": "Shopify Form Integration",
  "settings": [
    {
      "type": "header",
      "content": "Form Selection"
    },
    {
      "type": "text",
      "id": "form_id",
      "label": "Shopify Form ID",
      "default": "874037",
      "info": "Enter your Shopify Form ID here."
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Get in Touch"
    },
    {
      "type": "richtext",
      "id": "subheading",
      "label": "Subheading",
      "default": "<p>Fill out the form below and we'll get back to you shortly.</p>"
    },
    {
      "type": "header",
      "content": "Styling"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#0A0A0A"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 160,
      "step": 8,
      "unit": "px",
      "label": "Top Padding",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 160,
      "step": 8,
      "unit": "px",
      "label": "Bottom Padding",
      "default": 80
    }
  ],
  "blocks": [
    {
      "type": "@app"
    }
  ],
  "presets": [
    {
      "name": "Shopify Form Integration"
    }
  ]
}
{% endschema %}
